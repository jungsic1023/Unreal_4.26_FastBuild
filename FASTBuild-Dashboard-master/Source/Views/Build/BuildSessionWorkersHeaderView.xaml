<UserControl x:Class="FastBuild.Dashboard.Views.Build.BuildSessionWorkersHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:build="clr-namespace:FastBuild.Dashboard.ViewModels.Build"
             xmlns:services="clr-namespace:FastBuild.Dashboard.Services"
             xmlns:services1="clr-namespace:FastBuild.Dashboard.Services.Build"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <!-- workers -->
    <ItemsControl ItemsSource="{Binding Workers}"
                  VerticalAlignment="Top">

        <!-- worker template -->
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type build:BuildWorkerViewModel}">

                <Grid Width="{StaticResource HeaderViewWidth}"
                      Background="{DynamicResource MaterialDesignBackground}">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Source={x:Static services1:BuildViewportServiceXamlSupport.Instance}, Path=JobDisplayMode }"
                                             Value="Compact">
                                    <Setter Property="Margin" Value="{StaticResource BuildWorkerRowMarginCompact}" />
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Margin" Value="{StaticResource BuildWorkerRowMarginStandard}" />
                        </Style>
                    </Grid.Style>

                    <!-- padding grid -->
                    <Grid >
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Source={x:Static services1:BuildViewportServiceXamlSupport.Instance}, Path=JobDisplayMode }"
                                                 Value="Compact">
                                        <Setter Property="Margin" Value="{StaticResource BuildWorkerRowPaddingCompact}" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Margin" Value="{StaticResource BuildWorkerRowPaddingStandard}" />
                            </Style>
                        </Grid.Style>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{StaticResource WorkerHeaderColumnSize}" />
                            <ColumnDefinition Width="{StaticResource CoreHeaderColumnSize}" />
                        </Grid.ColumnDefinitions>

                        <!-- host name container -->
                        <Grid VerticalAlignment="Top">

                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Source={x:Static services1:BuildViewportServiceXamlSupport.Instance}, Path=JobDisplayMode }"
                                                     Value="Compact">
                                            <Setter Property="Height" Value="{StaticResource BuildCoreRowHeightCompact}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Height" Value="{StaticResource BuildCoreRowHeightStandard}" />
                                </Style>
                            </Grid.Style>

                            <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       VerticalAlignment="Center"
                                       Text="{Binding HostName}" />
                        </Grid>

                        <!-- cores -->
                        <ItemsControl ItemsSource="{Binding Cores}"
                                      Grid.Column="1"
                                      VerticalAlignment="Top">
                            <ItemsControl.ItemTemplate>
                                <!-- core template -->
                                <DataTemplate DataType="{x:Type build:BuildCoreViewModel}">

                                    <Grid>
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Source={x:Static services1:BuildViewportServiceXamlSupport.Instance}, Path=JobDisplayMode }"
                                                                 Value="Compact">
                                                        <Setter Property="Height" Value="{StaticResource BuildCoreRowHeightCompact}" />
                                                        <Setter Property="Width" Value="{StaticResource BuildCoreRowHeightCompact}" />
                                                        <Setter Property="Margin" Value="{StaticResource BuildCoreRowMarginCompact}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Height" Value="{StaticResource BuildCoreRowHeightStandard}" />
                                                <Setter Property="Width" Value="{StaticResource BuildCoreRowHeightStandard}" />
                                                <Setter Property="Margin" Value="{DynamicResource BuildCoreRowMarginStandard}" />
                                            </Style>
                                        </Grid.Style>

                                        <Grid>

                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Source={x:Static services1:BuildViewportServiceXamlSupport.Instance}, Path=JobDisplayMode }"
                                                                     Value="Compact">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </Style>
                                            </Grid.Style>

                                            <Ellipse Fill="{DynamicResource PrimaryHueLightBrush}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Width="24"
                                                     Height="24"
                                                     StrokeThickness="1"
                                                     Stroke="{DynamicResource PrimaryHueDarkBrush}" />

                                            <TextBlock HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding Id}" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <GridSplitter Width="1"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Stretch" />
                </Grid>

            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
